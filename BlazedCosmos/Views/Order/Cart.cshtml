@model List<BlazedCosmos.Models.CartItem>

<h2>Your Cart</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Quantity * [Fetch Price]</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
