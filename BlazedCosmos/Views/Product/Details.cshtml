@model BlazedCosmos.Models.Product

<div class="product-details">
    <h2>@Model.Name</h2>
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <p>@Model.Description</p>
    <p class="price">Rs @Model.Price.ToString("0")</p>
    <button class="btn-add-to-cart" data-product-id="@Model.Id">Add to Cart</button>
</div>

@section Scripts {
    <script>
        // AJAX for adding to cart
        document.querySelector('.btn-add-to-cart').addEventListener('click', () => {
            const productId = document.querySelector('.btn-add-to-cart').getAttribute('data-product-id');
            fetch(`/Cart/Add/${productId}`, { method: 'POST' })
                .then(response => alert('Added to cart!'))
                .catch(error => console.error('Error:', error));
        });
    </script>
